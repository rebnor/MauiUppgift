<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiUppgift"
             x:Class="MauiUppgift.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Slider style for DetailPage -->
            <Style x:Key="StyledSlider" TargetType="Slider">
                <Setter Property="ThumbImageSource" Value="small_paw.png" />
                <Setter Property="ThumbColor" Value="Black" />
                <Setter Property="MinimumTrackColor" Value="Green" />
                <Setter Property="MaximumTrackColor" Value="Green" />
                <Setter Property="HeightRequest" Value="20" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
